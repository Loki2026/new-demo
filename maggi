#!/bin/bash

# Function to create a file
create_file() {
  # Get file name and optional content as arguments
  file_name="$1"
  content="$2"

  # Check if file already exists
  if [ -f "$file_name" ]; then
    echo "Error: File '$file_name' already exists."
    return 1  # Exit script with error code 1
  fi

  # Create the file using touch
  touch "$file_name"

  # If content is provided, write it to the file
  if [ -n "$content" ]; then
    echo "$content" >> "$file_name"
  fi

  echo "File '$file_name' created successfully."
}

# Get user input for file name and optional content
read -p "Enter file name: " file_name
read -p "Enter content (optional): " content

# Call the create_file function
create_file "$file_name" "$content"

# Check for errors in the function
if [ $? -eq 1 ]; then
  exit 1  # Exit script if an error occurred in the function
fi

